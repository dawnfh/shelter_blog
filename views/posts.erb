<!--
  this is the new post form 
  pay special attention to the method and action attributes
  method="POST" and action="/posts" means it will go to the
  post "/posts" route defined in the app.rb file
 -->

 <h1 id="newpost">New Post Form</h1>
<form method="POST" action="/createpost">
	
	<label for="body">Body</label>
  <textarea name="message_body" cols='100' rows="10" placeholder="Comment box"></textarea><br>
	
	<input type="submit">
</form>



<!--  this is the New Post form -->
<h1 id="">All Posts</h1>
<ul class="postlist">
  <% @posts.each do |post| %>
    <li><strong>Body:</strong> <%= post.body %></li>
    <li><strong>Username:</strong><%= post.user.username %></li>
  <% end %>
</ul>