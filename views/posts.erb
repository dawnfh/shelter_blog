<div id="newpost">

  <%= current_user.username %>, please share your post.
 
 <h3 id="postform">Post For Today</h3>

<form action="/createpost" method="POST">	
  <textarea for="body" name="body" cols='100' rows="5" placeholder="Comment box"></
	<input type="submit">
</form>
</div>


<div id="mypost">
<h3 id="mypost">My Posts</h3>
<ul class="userpostlist">
    <% @userposts.each do |post| %>
      <li><bold>Body:</bold> <%= post.body %></li>
      <li><bold>Username:</bold> <%= post.user.username %></li>
    <% end %>
</ul>
</div>

<div id="posts">
<h3 id="allpost">All Posts</h3>
<ul class="postlist">
  <% @posts.each do |post| %>
    <li><bold>Body:</bold> <%= post.body %></li>
    <li><bold>Username:</bold><% post.user.username %><li>
  <% end %>
</ul>
